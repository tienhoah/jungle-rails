<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>


  <div class="order-summary jumbotron">

  <h4>Thank you for your order!</h4>

  </div>
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product</th>
          <th>Name</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @line_items.each do |item| %>
           <tr>
             <td><%= image_tag item.product.image.tiny %></td>
             <td><h4><%= item.product.name %></h4></td>
             <td><p><%= item.product.description %></p></td>
             <td><%= item.quantity %></td>
             <td><%= item.total_price_cents / 100.0 %></td>
           </tr>

        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= @order.total_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
  <p>Thanks <%= @order.email %></p>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
